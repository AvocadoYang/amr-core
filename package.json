{
  "name": "amr-core",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "pm2 start ecosystem.config.js --attach",
    "stop": "pm2 delete ecosystem.config.js",
    "debug": "ts-node-dev --watch .env,config --respawn -r tsconfig-paths/register ./src/main.ts",
    "lint": "eslint \"{src}/**/*.ts\" --fix",
    "build": "tsc --project tsconfig.json  && tscpaths -p tsconfig.json -s ./src -o ./dist &&copyfiles .env ./dist && copyfiles -u 1 ./config/** ./dist/config",
    "build_pkg": "pkg dist/main.js -t \"node18-linux,node18-win\"  -c package.json && copyfiles .env ./build && copyfiles -u 1 ./config/** ./build/config"
  },
  "pkg": {
    "assets": [
      "node_modules/**/*",
      "dist/configs/**/*",
      "config/*.yamal",
      ".env"
    ],
    "targets": [
      "node18-linux"
    ],
    "outputPath": "build"
  },
  "dependencies": {
    "@types/amqplib": "^0.10.8",
    "@types/cors": "^2.8.17",
    "amqplib": "^0.10.9",
    "axios": "^1.13.2",
    "chalk": "^4.1.2",
    "config": "^3.3.7",
    "dotenv": "^10.0.0",
    "envalid": "^7.2.1",
    "faker": "^5.5.3",
    "js-yaml": "^4.1.0",
    "macaddress": "^0.5.2",
    "pkg": "^5.8.1",
    "pm2": "^5.3.0",
    "roslib": "^1.1.0",
    "rxjs": "^7.4.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.3.2",
    "tspath": "^2.6.8",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/config": "^0.0.41",
    "@types/node": "^16.11.6",
    "@types/roslib": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.4.4"
  },
  "packageManager": "yarn@4.12.0"
}
